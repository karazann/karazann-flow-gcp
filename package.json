{
    "name": "karazann-flow-gcp",
    "version": "1.0.0",
    "description": "GCP Cloud Functions to run Karazann Flows on triggers",
    "main": "index.js",
    "scripts": {
        "start:dev": "cross-env NODE_ENV=development nodemon",
        "clean": "rm -rf dist",
        "build": "tsc -p tsconfig.json",
        "start": "cross-env NODE_ENV=production node dist/index.js",
        "start:test": "cross-env NODE_ENV=test ts-node src/index.ts",
        "test": "cross-env NODE_ENV=test jest",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "lint": "tslint -p tsconfig.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/szkabaroli/karazann-flow-gcp.git"
    },
    "author": "Roland Sz. Kovacs <szkabaroli@gmail.com> (karazann.com)",
    "license": "UNLICENSED",
    "bugs": {
        "url": "https://github.com/szkabaroli/karazann-flow-gcp/issues"
    },
    "homepage": "https://github.com/szkabaroli/karazann-flow-gcp#readme",
    "dependencies": {
        "@google-cloud/pubsub": "^1.1.5",
        "@google-cloud/storage": "^4.1.2",
        "class-transformer": "^0.2.3",
        "class-validator": "^0.11.0",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "pg": "^7.12.1",
        "pg-query-stream": "^2.0.1",
        "routing-controllers": "^0.8.0",
        "typedi": "^0.8.0",
        "typeorm": "^0.2.20",
        "winston": "^3.2.1"
    },
    "devDependencies": {
        "@types/bunyan": "^1.8.6",
        "@types/express": "^4.17.2",
        "@types/jest": "^24.0.23",
        "@types/node": "^12.12.7",
        "@types/supertest": "^2.0.8",
        "cross-env": "^6.0.3",
        "jest": "^24.9.0",
        "nodemon": "^2.0.0",
        "prettier": "^1.19.1",
        "supertest": "^4.0.2",
        "ts-jest": "^24.1.0",
        "ts-node": "^8.5.0",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "typedoc": "^0.15.2",
        "typescript": "^3.7.2"
    },
    "bit": {
        "env": {},
        "componentsDefaultDirectory": "src/shared/{name}",
        "packageManager": "npm"
    },
    "jest": {
        "testEnvironment": "node",
        "coveragePathIgnorePatterns": [
            "/node_modules/"
        ],
        "roots": [
            "<rootDir>/src"
        ],
        "testMatch": [
            "**/?(*.)+(spec|test).+(ts|tsx|js)"
        ],
        "transform": {
            "^.+\\.(ts|tsx)?$": "ts-jest"
        },
        "globals": {
            "ts-jest": {
                "isolatedModules": true
            }
        }
    }
}
